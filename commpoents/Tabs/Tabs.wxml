<!--commpoents/Tabs/Tabs.wxml-->
<view class="tabs">
	<view class="tabs_title">
		<view wx:for="{{tabs}}" wx:key="id" class="title_item {{item.isActive ? 'active' : ''}}" bind:tap="handleItemTap" data-index="{{index}}">
			{{item.value}}
		</view>
	</view>
	<view class="tabs_content">
		<slot></slot>
	</view>
</view>